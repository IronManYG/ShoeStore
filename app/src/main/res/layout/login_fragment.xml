<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_layout_margin"
        android:text="@string/user_name"
        app:layout_constraintStart_toStartOf="@+id/shoe_shop_image"
        app:layout_constraintTop_toBottomOf="@+id/shoe_shop_image" />

    <ImageView
        android:id="@+id/shoe_shop_image"
        android:layout_width="0dp"
        android:layout_height="307dp"
        android:layout_marginStart="@dimen/horizontal_layout_margin"
        android:layout_marginTop="@dimen/vertcal_layout_margin"
        android:layout_marginEnd="@dimen/horizontal_layout_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_shoe_shop" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_layout_margin"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>